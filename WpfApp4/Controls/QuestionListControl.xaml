<UserControl x:Class="WpfApp4.Controls.QuestionListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp4.Controls"
             xmlns:vm="clr-namespace:WpfApp4.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:QuestionListViewModel/>
    </UserControl.DataContext>
    <Grid>
        <TextBlock Text="QuestionListControl" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Button Content="create" Margin="10,30,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"
                Command="{Binding GoQuestionCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=UserControl}}"/>
        <ListBox ItemsSource="{Binding QuestionsVM}" Margin="10,60,10,10" 
                 VerticalAlignment="Top" HorizontalAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5,2,0,2" HorizontalAlignment="Stretch">
                        <TextBlock Text="{Binding QuestionText, Mode=TwoWay}" HorizontalAlignment="Stretch" Margin="0,0,5,0"/>
                        <ListBox ItemsSource="{Binding Answers, Mode=TwoWay}" HorizontalAlignment="Stretch">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <DockPanel HorizontalAlignment="Stretch" Margin="5,2,0,2">
                                        <RadioButton IsChecked="{Binding IsCorrect, Mode=TwoWay}" 
                         GroupName="CorrectAnswerGroup" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                    </DockPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
